{
  "dashboard": {
    "id": null,
    "title": "Hurricane ML Training Metrics",
    "tags": ["ml", "hurricane", "tensorflow"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Training & Validation Accuracy",
        "type": "timeseries",
        "targets": [
          {
            "expr": "ml_training_accuracy",
            "legendFormat": "Training Accuracy - Epoch {{epoch}}",
            "refId": "A"
          },
          {
            "expr": "ml_training_val_accuracy", 
            "legendFormat": "Validation Accuracy - Epoch {{epoch}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Training & Validation Loss",
        "type": "timeseries",
        "targets": [
          {
            "expr": "ml_training_loss",
            "legendFormat": "Training Loss - Epoch {{epoch}}",
            "refId": "C"
          },
          {
            "expr": "ml_training_val_loss",
            "legendFormat": "Validation Loss - Epoch {{epoch}}",
            "refId": "D"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Model Performance Summary",
        "type": "stat",
        "targets": [
          {
            "expr": "ml_training_val_accuracy",
            "legendFormat": "Best Val Accuracy"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "displayName": "Best Validation Accuracy"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 9}
      },
      {
        "id": 4,
        "title": "Latest Run ID",
        "type": "stat", 
        "targets": [
          {
            "expr": "ml_training_accuracy",
            "legendFormat": "{{run_id}}"
          }
        ],
        "gridPos": {"h": 4, "w": 18, "x": 6, "y": 9}
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s"
  }
}